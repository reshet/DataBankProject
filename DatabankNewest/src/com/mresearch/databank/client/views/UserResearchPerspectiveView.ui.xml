<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.research-catalog {
			font:10px;
			padding: 2px;
			margin: 1 1 1 1;
		}
		.splitter
		{
			border: 3px solid #69c014;
		}
		.gwt-SplitLayoutPanel-HDragger {
		  background: #69c014;
		  cursor: col-resize;
		  border: 2px solid #69c014;
		}
		.gwt-Tree .gwt-TreeItem {
		  padding: 1px 0px;
		  margin: 0px;
		  white-space: nowrap;
		  cursor: hand;
		  cursor: pointer;
		}
		.gwt-Tree .gwt-TreeItem-selected {
		  background: #ebeff9;
		}
		.gwt-TreeItem .gwt-RadioButton input,
		.gwt-TreeItem .gwt-CheckBox input {
		  margin-left: 0px;
		}
	</ui:style>
	<g:VerticalPanel width="100%">
				<g:HorizontalPanel ui:field="researchCommandBar" height="25px" horizontalAlignment="left">
				<g:HTMLPanel>
					<table>
						<tr>
							<td float="right"><g:CheckBox text="Взвешивание отключено" checked="false" ui:field="weights_use"></g:CheckBox></td>
							<td float="right"><g:CheckBox text="Фильтры" checked="false" ui:field="filters_use"></g:CheckBox> </td>
							<td float="right"><g:Button ui:field="filters_details_btn" text="Подробнее..."></g:Button></td>	
							<td float="right"><g:Button ui:field="filters_add_btn" text="+"></g:Button></td>	
							<td float="right"><g:Button ui:field="filters_delete_btn" text="-"></g:Button></td>			
						</tr>
					</table>
				</g:HTMLPanel>
			</g:HorizontalPanel>
			<g:SplitLayoutPanel   width="100%" height="800px">
				<g:west size = "300" unit='EM'>
					<g:ScrollPanel   width="100%" height="100%">
						<g:Tree ui:field="tree">
						</g:Tree>
					</g:ScrollPanel>
				</g:west>
				<g:center>
					<g:ScrollPanel   width="100%" height="100%">
						<g:VerticalPanel ui:field="centerPanel">
						</g:VerticalPanel>
					</g:ScrollPanel>
				</g:center>
			</g:SplitLayoutPanel>
	</g:VerticalPanel>
	
</ui:UiBinder> 