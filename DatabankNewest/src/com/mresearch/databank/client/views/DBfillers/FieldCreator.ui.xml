<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:third="urn:import:org.zenika.widget.client.datePicker">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:ScrollPanel>
		<g:VerticalPanel>
			<g:HTMLPanel>
				<table>
					<tr>
						<td>
							<g:Label>Тип поля: </g:Label>
						</td>
						<td>
							<g:ListBox ui:field="field_type"></g:ListBox>
						</td>
					</tr>
					<tr>
						<td>
							<g:Label>Идентификатор: </g:Label>
						</td>
						<td>
							<g:TextBox ui:field="unique_name"></g:TextBox>
						</td>
					</tr>
					<tr>
						<td>
							<g:Label>Имя: </g:Label>
						</td>
						<td>
							<g:TextBox ui:field="field_name"></g:TextBox>
						</td>
					</tr>
					<tr>
						<td>
							<g:CheckBox ui:field="multiselection_en">Разрешить множество значений</g:CheckBox>
						</td>
					</tr>
				</table>
			</g:HTMLPanel>
			<g:HorizontalPanel>
				<g:Button ui:field="doAdd">ОК</g:Button>
				<g:Button ui:field="doCancel">Отмена</g:Button>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:ScrollPanel>	
</ui:UiBinder> 