<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.research-catalog {
			font:10px;
			padding: 2px;
			margin: 1 1 1 1;
		}
	
		
	</ui:style>
	<g:VerticalPanel width="100%">
				
			<g:SplitLayoutPanel   width="100%" height="800px">
				<g:west size = "400" unit='EM'>
					<g:ScrollPanel   width="100%" height="100%">
						<g:VerticalPanel>
						<g:Tree ui:field="tree" >
						</g:Tree>
						<g:VerticalPanel ui:field="filter_pnl"></g:VerticalPanel>
						</g:VerticalPanel>
						
					</g:ScrollPanel>
				</g:west>
				<g:center>
					<g:ScrollPanel   width="100%" height="100%">
						<g:VerticalPanel ui:field="centerPanel">
						</g:VerticalPanel>
					</g:ScrollPanel>
				</g:center>
			</g:SplitLayoutPanel>
	</g:VerticalPanel>
</ui:UiBinder> 