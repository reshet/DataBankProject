<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:third="urn:import:org.zenika.widget.client.datePicker">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.heading p
		{
			font-size:23px;
			font-weight: bold;
			padding-left: 30px;	
		}
		.general
		{
			margin: 10,10,10,10;
		}
	</ui:style>
	<g:HTMLPanel>
		<div class="style.general">
			<div class="style.heading">
				<h2>Ответить на вопрос ...
				</h2>
				 
			</div>
			<g:CheckBox ui:field="do_publish">Опубликовано</g:CheckBox>
			<g:Button ui:field="submitButton"> Ответить!</g:Button>
			<VerticalPanel horizontalAlignment="ALIGN_RIGHT">
				<g:Button ui:field="delButton"> Удалить!</g:Button>
			</VerticalPanel>
			<h4><g:Label ui:field="question"></g:Label>
				</h4>
				<h3>
					<g:Label width="500px">Ваш ответ: </g:Label>
				</h3>
			<g:TextArea width="600px" height="400px" ui:field="answer"></g:TextArea>
			
			<br/><br/>
			<g:VerticalPanel ui:field="elasticDBfields"/>
			
			
			<br/><br/>
			

		</div>
	</g:HTMLPanel>
</ui:UiBinder> 