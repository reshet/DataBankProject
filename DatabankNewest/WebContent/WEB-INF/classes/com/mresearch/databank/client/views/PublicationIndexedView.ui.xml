<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
			.padded{
   			 padding-left: 30px;
		}
			.padded15{
   			 padding-left: 15px;
		}
	</ui:style>
	<g:VerticalPanel>
		<g:HTMLPanel>
	        <h1 class="yellow"><g:Label ui:field="name"/></h1>
         	<div class="column560">
                <p class="gray25">
						<g:HTML ui:field="html">
						</g:HTML>
				</p>
				<div class="dark-yellow right">
				<g:HorizontalPanel width="100%">
					<g:Anchor ui:field="show_deeper" text="Подробнее..." styleName="{style.padded15}"></g:Anchor>
					<g:HorizontalPanel ui:field="link_panel" styleName="{style.padded}"></g:HorizontalPanel>
					<g:Anchor ui:field="show_meta" text="Дополнительная информация" horizontalAlignment="ALIGN_RIGHT" styleName="{style.padded}"></g:Anchor>
				</g:HorizontalPanel>
				</div>
			</div>
		</g:HTMLPanel>
	</g:VerticalPanel>
</ui:UiBinder> 
