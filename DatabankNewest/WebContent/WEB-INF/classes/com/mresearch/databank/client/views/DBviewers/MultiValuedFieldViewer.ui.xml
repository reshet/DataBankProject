<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.category
		{
			color: #772222;
			font-weight: bold;
			font: 16px;
			vertical-align: text-top;
			font: NeoSans;
		}
		.tableResearch
		{
			font-weight: normal;
			background-color: #88AA66;
			padding: 15px;
		}
	</ui:style>
	<g:HTMLPanel>
		<table class="{style.tableResearch}" cellSpacing="20px">
			<tr>
				<td>
					<g:Label ui:field="field_name" styleName="{.category}"></g:Label>
				</td>
			</tr>
			<tr>
				<td/>
				<td>
					<g:FlexTable ui:field="subunits_table"></g:FlexTable>
				</td>
			</tr>			
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 