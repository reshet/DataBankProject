<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.st
		{
			margin-left: 30px;
		}
		.padded{
   			 padding-left: 30px;
		}
	</ui:style>
	<g:VerticalPanel>
		<g:HTMLPanel styleName="{style.st}">
			<div class="column640">
			  <h1 class="yellow"><g:Label ui:field="name"/></h1>
	        
	          <div class="column560">
	                <p class="gray25">
							<g:HTML ui:field="html">
							</g:HTML>
					</p>
				</div>
				<div class="dark-yellow right">
				<g:HorizontalPanel spacing="10" horizontalAlignment="ALIGN_RIGHT" width="100%">
					<g:HorizontalPanel ui:field="link_panel"></g:HorizontalPanel>
					<g:Anchor ui:field="show_meta" text="Дополнительная информация" styleName="{style.padded}"></g:Anchor>
				</g:HorizontalPanel>
				</div>
			</div>
		</g:HTMLPanel>
	</g:VerticalPanel>
</ui:UiBinder> 