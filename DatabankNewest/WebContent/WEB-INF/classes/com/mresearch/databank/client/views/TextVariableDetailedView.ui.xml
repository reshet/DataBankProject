<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.analisys{
			text-align: right;
		
		}
	</ui:style>
	<g:HTMLPanel>
		<g:HorizontalPanel ui:field="analysis_bar" styleName="{style.analisys}">
		</g:HorizontalPanel>
			
		<h2>Просмотр переменной</h2>
		<table>
			<tr>
				<td>Имя переменной: </td><td><g:Label ui:field="varCode"></g:Label></td>
			</tr>
			<tr>
				<td>Текст вопроса: </td><td><g:Label ui:field="varText"></g:Label></td>
			</tr>
			<tr>
				<td>Кол-во записей: </td><td><g:Label ui:field="number_of_records"></g:Label></td>
			</tr>
			<tr>
				<td>Список значений:</td>
				<td>
					<g:FlexTable ui:field="values_table"></g:FlexTable>
				</td>
			</tr>
			<tr>
				<td><g:VerticalPanel ui:field="elasticDBfields"></g:VerticalPanel></td>
			</tr>
			<tr>
				<td>Переменная использовалась:</td><td><g:FlexTable ui:field="generalizedTbl"></g:FlexTable></td>
			</tr>	
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 