<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.research-catalog {
			font:10px;
			padding: 2px;
			margin: 1 1 1 1;
		}
		.splitter
		{
			border: 3px solid #69c014;
		}
		
		.gwt-TreeItem-selected
		{
		   background-color: #529510;
		   background: #529510;
		}
	</ui:style>
	<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_CENTER" height="100%">
				
			<g:SplitLayoutPanel   width="100%" height="800px" ui:field="split_panel">
				<g:center>
					<g:ScrollPanel   width="100%" height="100%">
						<g:VerticalPanel width="100%" height="100%" horizontalAlignment="ALIGN_LEFT">
							<g:HTMLPanel>
							<g:Tree ui:field="tree" animationEnabled="true">
							</g:Tree>
							<div class="line-separator"></div>
							<g:Tree ui:field="F_S_tree" animationEnabled="true">
							</g:Tree>
							<div class="line-separator"></div>
							<g:Tree ui:field="F_V_tree" animationEnabled="true">
							</g:Tree>
							</g:HTMLPanel>
							
						</g:VerticalPanel>
					</g:ScrollPanel>
				</g:center>
<!-- 				<g:west size = "300" unit='EM' minSize = "780px"> -->
<!-- 					<g:ScrollPanel   width="100%" height="100%"> -->
<!-- 						<g:Tree ui:field="tree" styleName="{style.gwt-Tree}"> -->
<!-- 						</g:Tree> -->
<!-- 					</g:ScrollPanel> -->
<!-- 				</g:west> -->
				<g:east size = "780" unit='EM'>
						<g:ScrollPanel   width="100%" height="100%" ui:field="centerChild">
						<g:VerticalPanel ui:field="centerPanel">
						</g:VerticalPanel>
					</g:ScrollPanel>
				</g:east>	
				
			</g:SplitLayoutPanel>
	</g:VerticalPanel>
	
</ui:UiBinder> 