<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
	</ui:style>
	<g:VerticalPanel width="100%" height="100%">
		<g:TabLayoutPanel barHeight="30" visible="true" width="1000px" height="800px">
			<g:tab>
				<g:header>
					Исследования
				</g:header>
				<g:ScrollPanel width="100%" height="100%">
					<g:VerticalPanel ui:field="researchesPanel">
					</g:VerticalPanel>
				</g:ScrollPanel>
			</g:tab>
			<g:tab>
				<g:header>
					Законы
				</g:header>
				<g:ScrollPanel width="100%" height="100%">
					<g:VerticalPanel ui:field="lawsPanel">
					</g:VerticalPanel>
				</g:ScrollPanel>
			</g:tab>
			<g:tab>
				<g:header>
					Публикации
				</g:header>
				<g:ScrollPanel width="100%" height="100%">
					<g:VerticalPanel ui:field="pubsPanel">
						<g:Label text="Показать последних публикаций: "></g:Label><g:TextBox ui:field="pubsShowLast" text="0"></g:TextBox>
					</g:VerticalPanel>
				</g:ScrollPanel>
			</g:tab>
		</g:TabLayoutPanel>
		<g:Button ui:field="save" text="Утвердить!"></g:Button>
	</g:VerticalPanel>
</ui:UiBinder> 