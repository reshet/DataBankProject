<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.padded{
   			 padding-left: 30px;
		}
	</ui:style>
	<g:VerticalPanel styleName="{style.padded}">
		<g:HTMLPanel styleName="{style.padded}">
		  <div class="h2">
                    <h2 class="article red"><g:Label ui:field="name"/></h2>
           </div>
           
			<div class="column560">
                <p class="gray25">
						<g:HTML ui:field="html">
						</g:HTML>
				</p>
			</div>
			<div class="dark-red right">
			<g:HTMLPanel width="100%">
				<table>
					<tr>
						<td>
							<g:Anchor ui:field="show_deeper" text="Подробнее..."></g:Anchor>
						</td>
						<td>
							<g:HorizontalPanel ui:field="link_panel" styleName="{style.padded}"></g:HorizontalPanel>
						</td>
						<td align="right">
							<g:Anchor ui:field="show_meta" text="Дополнительная информация" styleName="{style.padded}"></g:Anchor>
						</td>
					</tr>
				</table>
			</g:HTMLPanel>
			</div>
		</g:HTMLPanel>
	</g:VerticalPanel>
</ui:UiBinder> 