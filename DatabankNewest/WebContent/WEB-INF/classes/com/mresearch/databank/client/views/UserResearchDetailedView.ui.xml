<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		 .tableResearch
		{
			font-weight: normal;
			background-color: #88AA66;
			padding: 15px;
			font-family: Helvetica;
			font: 13px;
		}
		.category
		{
			color: #772222;
			font-weight: bold;
			font: 16px;
			vertical-align: text-top;
		}
		
	</ui:style>
	<g:VerticalPanel>
	<g:HTMLPanel>
		<h2>Research detailes</h2>
		<table class="{style.tableResearch}" cellSpacing="20px">
			<tr>
				<td class="{style.category}">Объем выборки:</td>
				<td><g:Label ui:field="selectionSize">"Selection" size</g:Label></td>
			</tr>
			<tr>
				<td class="{style.category}">Публикации, связаные с исследованием:</td>
				<td>
					<g:FlexTable ui:field="flexPubl_tbl">	
					</g:FlexTable>
				</td>
			</tr>
			<tr>
				<td class="{style.category}">Исследователи, связаные с проектом:</td>
				<td><g:Label ui:field="researchers">Researchers: Paniotto-Co</g:Label></td>
			</tr>
			<tr>
				<td class="{style.category}">Взвешивание:</td>
				<td><g:Label ui:field="weights">Без взвешивания.</g:Label></td>
			</tr>
		</table>
	</g:HTMLPanel>	
		<g:VerticalPanel ui:field="elasticDBfields"></g:VerticalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 