<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:views="urn:import:com.mresearch.databank.client.views">
	<ui:style>
		.tableStyle table {
		    font-family: 'Trebuchet MS', Verdana, Arial, Helvetica;
		    font-size: 14px;
		    color: #4d4d4d;
		    border-collapse: collapse;
		}
		
		.tableStyle th {
		    text-align: right;
		    min-width: 100px;
		    font-weight: normal;
		    padding: 2px 5px;
		    border-right: #cccccc solid 1px;
		    /*border-bottom: #e5e5e5 solid 1px;*/
		}
		
		.tableStyle td {
		    color: #656565;
		    text-align: right;
		    border-right: #cccccc solid 1px;
		    /*border-bottom: #e5e5e5 solid 1px;*/
		    padding: 2px 5px;
		
		}
		
		.tableStyle tr > th:first-child, .tableStyle  tr > td:first-child  {
		    color: #4d4d4d;
		    text-align: left;
		    border-right: #cccccc double 3px;
		    
		 
		}
		.analisys{
			text-align: right;
		
		}
	</ui:style>
	<g:HTMLPanel>
		<g:HorizontalPanel ui:field="analysis_bar" styleName="{style.analisys}">
		</g:HorizontalPanel>
		<h2>Просмотр переменной</h2>
		<g:HTMLPanel ui:field="main_html">
			<table>
				<tr>
					<td>Имя переменной: </td><td><g:Label ui:field="varCode"></g:Label></td>
				</tr>
				<tr>
					<td>Текст вопроса: </td><td><g:Label ui:field="varText"></g:Label></td>
				</tr>
			</table>
				<g:FlexTable ui:field="codeSchemeTbl" styleName="{style.tableStyle}"></g:FlexTable>
				<br/>
				Переменная использовалась:
				<g:FlexTable ui:field="generalizedTbl"></g:FlexTable>
			<br/>
			<g:VerticalPanel ui:field="elasticDBfields"></g:VerticalPanel>
		</g:HTMLPanel>
		<g:HorizontalPanel ui:field="save_pnl"></g:HorizontalPanel>
		<g:VerticalPanel ui:field="graph_pnl" width="800px" height="700px"></g:VerticalPanel>
	</g:HTMLPanel>
	
</ui:UiBinder> 