<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.mainMenu {
			margin: 10px;
			padding: 15px;
			text-align: center;
			font-size: 18px;
			color: white;
			border: medium;
			background-color: #228822;
		}
		.mainMenu :HOVER{
			color: olive;
		}
		.login{
			text-align: right;
			padding-left: 200px;
			color: silver;
			font: bold;
		}
	</ui:style>
	
	<g:VerticalPanel>
			<g:HorizontalPanel styleName="{style.mainMenu}">
					<g:Anchor href="javascript:;" ui:field="bankNav" styleName="{style.mainMenu}">Банк публикаций</g:Anchor>
				<g:Anchor href="javascript:;" ui:field="articlesNav" styleName="{style.mainMenu}">Статьи</g:Anchor>
				<g:Anchor href="javascript:;" ui:field="logoutNav" styleName="{style.login}">
					Выйти
				</g:Anchor>
		</g:HorizontalPanel>
			<g:VerticalPanel ui:field="centerPanel" width="100%" height="100%">
				<g:HTMLPanel>
					<p>SOS!</p>
				</g:HTMLPanel>
			</g:VerticalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 