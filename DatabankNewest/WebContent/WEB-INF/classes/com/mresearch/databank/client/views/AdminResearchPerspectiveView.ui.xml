<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.research-catalog {
			font:10px;
			padding: 2px;
			margin: 1 1 1 1;
		}
	
		.gwt-Tree .gwt-TreeItem
		{
		   font: 9px;
		   color: green;
		}
		.tree {
			background-color: gray;
			color: white;
			margin: 1 1 1 1;
		}
		.gwt-Tree .gwt-TreeItem-selected
		{
		   background-color: blue;
		}
		.ControlPanel
		{
			float:left;
			padding-left: 600px;
			text-align: right;			
		}
	</ui:style>
	
	<g:SplitLayoutPanel   width="2000px" height="2400px">
				<g:west size = "300" unit='EM'>
					<g:ScrollPanel   width="100%" height="100%">
						<g:VerticalPanel>
								<g:Tree ui:field="tree">
								</g:Tree>
								<g:HorizontalPanel>
									<g:Button ui:field="createBtn" enabled="false">Create</g:Button>
									<g:Button ui:field="deleteBtn" enabled="false">Delete</g:Button>
									<g:Button ui:field="addBtn" enabled="false">Add research</g:Button>
								</g:HorizontalPanel>	
						</g:VerticalPanel>
					</g:ScrollPanel>
				</g:west>
				<g:center>
						<g:VerticalPanel ui:field="centerPanel" width="100%" height="100%">
						</g:VerticalPanel>
				</g:center>
			</g:SplitLayoutPanel>
</ui:UiBinder> 