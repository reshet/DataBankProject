<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:views="urn:import:com.mresearch.databank.client.views">
	<ui:style>
		.tableStyle table {
		    font-family: 'Trebuchet MS', Verdana, Arial, Helvetica;
		    font-size: 14px;
		    color: #4d4d4d;
		    border-collapse: collapse;
		}
		
		.tableStyle th {
		    text-align: right;
		    min-width: 100px;
		    font-weight: normal;
		    padding: 2px 5px;
		    border-right: #cccccc solid 1px;
		    /*border-bottom: #e5e5e5 solid 1px;*/
		}
		
		.tableStyle td {
		    color: #656565;
		    text-align: right;
		    border-right: #cccccc solid 1px;
		    /*border-bottom: #e5e5e5 solid 1px;*/
		    padding: 2px 5px;
		
		}
		
		.tableStyle tr > th:first-child, .tableStyle  tr > td:first-child  {
		    color: #4d4d4d;
		    text-align: left;
		    border-right: #cccccc double 3px;
		}
	</ui:style>
	<g:HTMLPanel>
		<h2>Просмотр переменной</h2>
		<g:HTMLPanel ui:field="main_html">
			<table>
				<tr>
					<td>Имя переменной: </td><td><g:Label ui:field="varCode"></g:Label></td>
				</tr>
				<tr>
					<td>Текст вопроса: </td><td><g:Label ui:field="varText"></g:Label></td>
				</tr>
				<tr>
					<td>Code Scheme: </td><td><g:FlexTable ui:field="codeSchemeTbl" styleName="{style.tableStyle}"></g:FlexTable></td>
				</tr>
				<tr>
					<td>Переменная использовалась:</td><td><g:FlexTable ui:field="generalizedTbl"></g:FlexTable></td>
				</tr>
				<tr>
					<td><g:VerticalPanel ui:field="elasticDBfields"></g:VerticalPanel></td>
				</tr>
			</table>
		</g:HTMLPanel>
		<g:HorizontalPanel ui:field="save_pnl"></g:HorizontalPanel>
		<g:Button ui:field="confirmBtn">Сохранить</g:Button>
	</g:HTMLPanel>
</ui:UiBinder> 